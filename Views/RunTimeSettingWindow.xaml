<Window x:Class="WpfRibbonApplication1.Views.RunTimeSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="创建温度场分析" Height="214.846" Width="500"
        Background="{DynamicResource 99\,99\,99}">
    <StackPanel Margin="50,20,50,20">
        <StackPanel Orientation="Horizontal" Margin="0,5,0,0"  VerticalAlignment="Center">
            <Label Content="分析名称:" Margin="0,0,5,0"/>
            <TextBox Width="300" Margin="25, 0, 0, 0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
            <RadioButton Content="快速计算" Margin="15,0,0,0"></RadioButton>
            <RadioButton Content="正常计算" Margin="20,0,0,0"></RadioButton>
            <RadioButton Content="精确计算" Margin="20,0,0,0"></RadioButton>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
            <CheckBox Content="创建后直接执行分析" Margin="15,0,0,0"></CheckBox>
            <CheckBox Content="Demo程序" Margin="40,0,0,0"></CheckBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="50, 20, 20, 0"  HorizontalAlignment="Right">
            <Button Content="确定" Width="71" Height="20" Click="Button_Click_1"/>
        </StackPanel>
    </StackPanel>
</Window>
